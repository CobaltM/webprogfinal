   <?php
     $car = $_POST['car'];
     $van = $_POST['van'];
     $truck = $_POST['truck'];
     $suv = $_POST['suv'];
     $hearse = $_POST['hearse'];
     $selected =$_POST['carSize'];
   function chooseImage(){
       global $car, $van, $truck, $suv, $hearse, $selected;
       if($selected == 'car'){
           echo'<img src="smallCar.jpg" alt="van" height="200" width="300" />';
       }
       else if($selected == 'truck'){
            echo'<img src="truck.jpg" alt="van" height="200" width="300"/>';
       }
       else if($selected == 'van'){
            echo'<img src="van.jpg" alt="van" height="200" width="300"/>';
       }
       else if($selected == 'suv'){
            echo'<img src="suv.jpg" alt="suv" height="200" width="300" />';
       }
       else if($selected == 'hearse'){
            echo'<img src="hearse.png" alt="hearse" height="200" width="400" />';
       }
       else{
           echo("please select a vehicle size");
       }
   }

   $startDate = $_POST['pickupDay'];
   $start = date_create($startDate);
   $endDate = $_POST['dropOffDay'];
   $end = date_create($endDate);
   $total =0;
   $selected =$_POST['carSize'];
   $totalDays = date_diff($start, $end);

   function amountDue(){
       global $startDate, $start, $endDate, $end, $total, $selected, $totalDays;
       if($selected == 'car'){
        $total = 15 * $totalDays->d;
        echo "\$", $total, ".00";
    }
    else if($selected == 'truck'){
        $total = 17 * $totalDays->d;
        echo "\$", $total, ".00";
    }
    else if($selected == 'van'){
        $total = 17 * $totalDays->d;
        echo "\$", $total, ".00";
    }
    else if($selected == 'suv'){
        $total = 20 * $totalDays->d;
        echo "\$", $total, ".00";
    }
    else if($selected == 'hearse'){
        $total = 20 * $totalDays->d;
        echo "\$", $total, ".00";
    }
    else{
        echo("please provide missing information");
    }
   }

   ?>
